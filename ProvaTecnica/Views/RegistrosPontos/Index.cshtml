@model ProvaTecnica.Models.DtoRegistroPonto

@{
    ViewData["Title"] = "Filtros Relatório";
}
<h1>Filtros do Relatório</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Report" id="Report">
            <div class="form-group">
                <label class="control-label">Data Inicial</label>
                <input id="DataInicial" name="DataInicial" type="date" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">Data Final</label>
                <input id="DataFinal" name="DataFinal" type="date" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">Usuários</label>
                @Html.DropDownList("NomeUsuario")
            </div>
            <div class="form-group">
                <input type="submit" value="Gerar Relatório" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
